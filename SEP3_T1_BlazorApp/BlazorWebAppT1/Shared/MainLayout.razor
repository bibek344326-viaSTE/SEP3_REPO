@namespace SEP3_REPO.SEP3_T1_BlazorApp.BlazorWebAppT1.Shared
@using SEP3_REPO.SEP3_T1_BlazorApp.BlazorWebAppT1.Shared
@inherits LayoutComponentBase

<!-- Sidebar and Content -->
<div class="content-wrapper">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>


<!-- Styles for Layout and Navbar -->
<style>
    /* Basic Reset */
    body {
        margin: 0;
        padding: 0;
        font-family: 'Arial', sans-serif;
    }

    /* Navbar */
    .top-row {
        position: sticky;
        top: 0;
        z-index: 1050;
        background: linear-gradient(to right, #343a40, #212529);
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
    }

    .navbar-brand {
        font-weight: bold;
        font-size: 1.25rem;
        color: #fff;
    }

    .navbar-toggler {
        border: none;
        background-color: transparent;
    }

    .navbar-toggler-icon {
        background-image: url('data:image/svg+xml;charset=UTF-8,...');
    }

    /* Sidebar and Content Layout */
    .content-wrapper {
        display: flex;
        min-height: 100vh;
    }

    .sidebar {
        width: 250px;
        background-color: #343a40;
        position: sticky;
        height: 100%;
        box-shadow: 2px 0 6px rgba(0, 0, 0, 0.1);
    }

    .nav-scrollable {
        display: none;
        position: absolute;
        top: 60px;
        left: 0;
        width: 100%;
        background-color: #343a40;
        padding: 1rem 0;
        z-index: 1000;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out;
        transform: translateY(-20px);
    }

    .nav-scrollable.show {
        display: block;
        transform: translateY(0);
    }

    .nav-link {
        color: #fff;
        font-size: 1.1rem;
        padding: 0.8rem 1rem;
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: background-color 0.2s, transform 0.2s ease-in-out;
    }

    .nav-link i {
        font-size: 1.3rem;
        transition: transform 0.3s ease;
    }

    .nav-link:hover,
    .nav-link:focus {
        background-color: #495057;
        transform: scale(1.05);
    }

    .nav-link.active {
        background-color: #007bff;
        color: white;
    }

    .nav-item {
        border-bottom: 1px solid #444;
    }

    .nav-item:last-child {
        border-bottom: none;
    }

    /* Media Queries */
    /* Ensure the nav links look great on mobile */
    @@media (max-width: 767px) {
        .nav-scrollable {
            position: fixed;
            top: 0;
            left: 0;
            width: 250px;
            height: 100%;
            background-color: #343a40;
            z-index: 1050;
            padding-top: 3rem;
            box-shadow: 2px 0 10px rgba(0, 0, 0, 0.3);
        }

        .navbar-toggler {
            z-index: 1060;
        }

        .sidebar {
            display: none;
        }

        .content-wrapper {
            display: block;
            padding-top: 60px; /* Maintain space for navbar */
        }
    }

    @@media (min-width: 768px) {
        .nav-scrollable {
            position: static;
            width: auto;
            background-color: transparent;
            display: block;
            transform: none;
            box-shadow: none;
            padding: 0;
        }

        .sidebar {
            display: block;
        }

        .content-wrapper {
            display: flex;
        }
    }

    /* Logo hover effect */
    .navbar-brand:hover {
        text-decoration: underline;
    }
</style>

<script>
    function logOut() {
        // Handle logout logic here (e.g., clear session/cookies)
        alert('Logged out');
        window.location.href = '/'; // Redirect to home or login page
    }
</script>

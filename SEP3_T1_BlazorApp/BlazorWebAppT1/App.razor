@namespace SEP3_REPO.SEP3_T1_BlazorApp.BlazorWebAppT1
@using Microsoft.AspNetCore.Components.Routing
@using SEP3_REPO.SEP3_T1_BlazorApp.BlazorWebAppT1.Shared

<Router AppAssembly="@typeof(Program).Assembly">
    <Found Context="routeView">
        <RouteView RouteData="@routeView" DefaultLayout="@typeof(MainLayout)" />
        <!-- Add the required Selector parameter -->
        <FocusOnNavigate RouteData="@routeView" Selector="h1" />
    </Found>
    <NotFound>
        <LayoutView Layout="@typeof(MainLayout)">
            <p>Sorry, there's nothing at this address.</p>
        </LayoutView>
    </NotFound>
</Router>

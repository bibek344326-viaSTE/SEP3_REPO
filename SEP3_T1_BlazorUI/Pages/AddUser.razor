@page "/add-user"
@using SEP3_T1_BlazorUI.Models;
@using SEP3_T1_BlazorUI.Application.UseCases;

@inject SEP3_T1_BlazorUI.Application.UseCases.UserUseCases UserUseCases

<PageTitle>Add User</PageTitle>

<h2>Add New User</h2>
<div class="card p-3">
    <EditForm Model="NewUser" OnValidSubmit="HandleAddUser">
        <DataAnnotationsValidator />
        <ValidationSummary />

        <div class="mb-3">
            <label for="username" class="form-label">Username:</label>
            <InputText id="username" class="form-control" @bind="NewUser.Username" />
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Password:</label>
            <InputText id="password" class="form-control" @bind="NewUser.Password" type="password" />
        </div>

        <div class="mb-3">
            <label for="workingNumber" class="form-label">Working Number:</label>
            <InputNumber TValue="int" id="workingNumber" class="form-control" @bind="NewUser.WorkingNumber" />
        </div>

        <div class="mb-3">
            <label for="role" class="form-label">Role:</label>
            <select id="role" class="form-select" @bind="NewUser.Role">
                <option value="">Select a role</option>
                @foreach (var role in UserUseCases.Roles)
                {
                    <option value="@role">@role</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-primary w-100 mb-2">Add User</button>
    </EditForm>
</div>

@code {
    private User NewUser = new User();

    private void HandleAddUser()
    {
        UserUseCases.AddUser(NewUser); // Use the AddUser use case
        NewUser = new User();          // Reset the form after submission
    }
}
